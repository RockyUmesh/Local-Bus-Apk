<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clsa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SrchAct">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="clip_horizontal|center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtVw2"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:foregroundGravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="Search the buses"
                android:textAlignment="center"
                android:textColor="#651FFF"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/bsNm2"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:ems="10"
                android:foregroundGravity="clip_horizontal"
                android:gravity="center_horizontal"
                android:hint="FROM"
                android:inputType="textPersonName"
                android:onClick="froms"
                android:textColor="#000000"
                android:textColorHint="#651FFF"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/sa_to2"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:ems="10"
                android:foregroundGravity="center_vertical"
                android:gravity="center_horizontal"
                android:hint="TO"
                android:inputType="textPersonName"
                android:textColorHint="#651FFF" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:clickable="true"
                android:contentDescription="TODO"
                android:onClick="btnfab"
                android:tint="#FFFFFF"
                android:visibility="visible"
                app:backgroundTint="#673AB7"
                app:srcCompat="@android:drawable/ic_input_add" />

            <Button
                android:id="@+id/bsearch"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:gravity="left"
                android:onClick="infosrch"
                android:text="Search" />

            <TextView
                android:id="@+id/text_view_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="147dp"
                android:background="#000000"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#FFFFFF"
                android:textStyle="bold|italic" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>